{
  "manifest_version": 3,
  "name": "Wildberries Extension",
  "version": "1.0",
  "description": "Расширение, которое работает только на сайте Wildberries.",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["*://www.wildberries.ru/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/16.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}